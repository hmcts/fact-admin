{% from "govuk/components/button/macro.njk" import govukButton %}

<h2 class="govuk-heading-l">Delete Contact Type: {{name}}</h2>

<div class="govuk-button-group">
  {{ govukButton({
    text: "Confirm Delete",
    type: "button",
    attributes: { id: "confirmDelete", 'data-url': deleteUrl },
    classes: "govuk-button--secondary"
  }) }}

  {{ govukButton({
    text: "Cancel",
    type: "button",
    attributes: { id: "cancelContactTypeChangesBtn" },
    classes: "govuk-button--secondary"
  }) }}
</div>
